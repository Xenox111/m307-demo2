<article class="foryou-post">
  <div class="post1">
    <img src="/uploads/{{post.photo_url}}" alt="{{post.title}}" />
    <div class="postcard">
      <h1>{{post.title}}</h1>
      <p>{{post.description}}</p>
      <p>Category: {{post.category}}</p>
      <p>Uploaded by: {{post.username}}</p>
      <p>Likes: {{post.like_count}}</p>
    </div>
  </div>
</article>

<!-- Comment Form -->
<h2 class="typoh1">Leave a Comment</h2>
<form action="/comment/{{post.id}}" method="POST" class="contactform">
  <label for="content"><p class="loginp">Your Comment:</p></label>
  <textarea id="content" name="content" required></textarea>
  <br />
  <br />
  <button type="submit">Post Comment</button>
</form>

<!-- Comments Section -->
<h2 class="typoh1">Comments</h2>
<div class="commentsection" id="comments-container"></div>
<button id="load-more" data-page="1" data-postid="{{post.id}}">Load More</button>

<!-- Link the JavaScript file -->
<script src="/comments.js"></script>